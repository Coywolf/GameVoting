@model GameVoting.Models.LoginModel
@{
    ViewBag.Title = "Sign in";
}

<div class="page-header">
    <h1 class="center">Sign In</h1>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
            @Html.AntiForgeryToken()
            @*@Html.ValidationSummary(true)*@

            <div class="form-group block-group">
                @Html.TextBoxFor(m => m.UserName, new { @class =  "form-control input-lg", placeholder = "Username" })
                @*@Html.ValidationMessageFor(m => m.UserName)*@

                @Html.PasswordFor(m => m.Password, new { @class =  "form-control input-lg", placeholder = "Password" })
                @*@Html.ValidationMessageFor(m => m.Password)*@
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    <strong>Remember me</strong>
                </label>
            </div>
                        
            <input type="submit" value="Log in" class="btn btn-block btn-primary btn-lg" />
            @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-block btn-default" })
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
